# Prompt
PS1='`if [[ 0 != $? ]]; then echo "\[\e[41;30m\]"; else echo "\[\e[44;30m\]"; fi;`' # red or blue
PS1+=" \t \[\e[1m\]\u @ \h: \w \[\e[0m\]\n"                                         # time, user, host, path
PS1+='`if $(jobs -p|grep -q "."); then echo "\j ";fi`'                              # background jobs
PS1+="\[\e[1;37m\]\\$ \[\e[0m\]";                                                   # prompt symbol, reset color
export PS1;

